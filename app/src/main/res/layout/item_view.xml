<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/itemLayout"
        android:background="?android:selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="72.0dip">
    <com.thf.sleepconfigurator.utils.FlashButton
            android:id="@+id/listCol"
            android:background="@null"
            android:layout_width="26.0dip"
            android:layout_height="26.0dip"
       android:layout_marginStart="16.0dip"
            android:scaleType="fitXY"
            android:adjustViewBounds="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <ImageView
            android:id="@+id/itemLogo"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
        android:layout_marginStart="16.0dip"
            android:layout_marginTop="16.0dip"
            android:layout_marginBottom="16.0dip"
            app:layout_constraintStart_toEndOf="@id/listCol"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />
    <ImageView
            android:id="@+id/itemChanged"
            android:layout_width="12.0dip"
            android:layout_height="12.0dip"
            android:layout_marginBottom="-5.0dip"
            android:src="@drawable/asterisk"
            app:layout_constraintBottom_toTopOf="@id/itemLogo"
            app:layout_constraintStart_toEndOf="@id/itemLogo" />
    <TextView
            android:textSize="16.0sp"
            android:textStyle="bold"
            android:id="@id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16.0dip"
            android:layout_marginTop="0.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_marginBottom="0.0dip"
            android:text="App Name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/itemLogo"
            app:layout_constraintTop_toTopOf="@id/itemLogo" />
    <ImageView
            android:id="@+id/itemWakelock"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_marginTop="0.0dip"
            android:layout_marginBottom="0.0dip"
            android:src="@drawable/alertclock"
            app:layout_constraintBottom_toBottomOf="@id/itemName"
            app:layout_constraintStart_toEndOf="@id/itemName"
            app:layout_constraintTop_toTopOf="@id/itemName" />
    <TextView
            android:textSize="12.0sp"
            android:id="@+id/itemPackageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_marginBottom="16.0dip"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/itemLogo"
            app:layout_constraintTop_toTopOf="@id/itemLogo"
            app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
